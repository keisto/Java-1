<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Java1">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/header"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textSize="42sp"
        android:textStyle="bold"
        android:phoneNumber="true"
        android:editable="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add"
        android:id="@+id/addButton"
        android:onClick="clickHandler"
        android:background="@android:drawable/btn_default"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/header"
        android:layout_alignEnd="@+id/header" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignTop="@+id/addButton"
        android:layout_toLeftOf="@+id/addButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/addButton"
        android:inputType="text|phone|numberPassword|textCapWords|textCapSentences|number|date|numberSigned|time|textShortMessage|textAutoComplete|textPersonName|datetime|textAutoCorrect"
        android:autoText="false"
        android:hint="Enter Data" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:choiceMode="none" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Average Length:  "
        android:id="@+id/dataCounter"
        android:textAlignment="center"
        android:layout_below="@+id/dataLength"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Total Data Entries:  "
        android:id="@+id/dataLength"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
